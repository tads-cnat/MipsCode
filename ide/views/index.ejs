<body>
    <header class="padding-padrao header-nav">
        <% if (!user) { %>
            <nav class="row navegation align-center">
                <div class="nav-logo row align-center">
                    <img src="./assets/img/logo-mips.png" alt="MipsCode Logo" class="logo">
                </div>
          
          
                <div class="nav-links">
                    <a class="fs-navegations color-gray" href="{% url 'mipscode:index' %}">Início</a>
                    <a class="fs-navegations color-green" href="{% url 'mipscode:ide' %}">IDE</a>
                    <a class="fs-navegations color-gray" href="{% url 'mipscode:documentation' documentationfirst %}">Documentação</a>
                </div>
          
                <div class="nav-buttons">
                    <a href="{% url 'mipscode:login' %}" class="fs-navegations color-green">Entrar</a>
                    <a href="{% url 'mipscode:registration' %}"><input class="fs-navegations button button-white bold"
                            type="button" value="Inscreva-se"></a>
                </div>
          
            </nav>
          
            <nav class="header-nav-mobile">
                <a href="{% url 'mipscode:dashboard' %}"><img src="{% static 'mipscode/img/logo-mips.png' %}"
                        alt="MipsCode Logo" class="logo"></a>
                <button class="menu" id="button-menu-mobile">
                    <img src="{% static 'mipscode/svgs/menu-min.svg' %}" alt="Menu">
                </button>
            </nav>
        <% } else { %>

